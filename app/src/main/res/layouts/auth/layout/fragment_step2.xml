<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewProfilePhotoLabel"
                        android:text="@string/profile_photo"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/editTextTopColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewProfilePhotoStarLabel"
                        android:text="@string/hint_star"
                        android:fontFamily="@font/gilroy_semibold"
                        android:textColor="@color/editTextStarColor"
                        android:layout_marginEnd="12dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePhotoCardView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/profilePhotoImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ikon_license"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nameSurnameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_namesurname"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/editTextTopColor"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_star"
                        android:layout_toEndOf="@id/nameSurnameTextView"
                        android:fontFamily="@font/gilroy_semibold"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/editTextStarColor"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:id="@+id/nameSurnameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_below="@id/nameSurnameTextView"
                        android:background="@drawable/background_edittext"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="@string/hint_namesurname"
                        android:inputType="textPersonName"
                        android:padding="8dp"
                        android:textColorHint="@color/editTextColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/phoneNumberTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_phone"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/editTextTopColor"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_star"
                        android:layout_toEndOf="@id/phoneNumberTextView"
                        android:fontFamily="@font/gilroy_semibold"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/editTextStarColor"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/phoneNumberTextView"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/phoneNumberContryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:ccp_defaultPhoneCode="90"/>

                        <EditText
                            android:id="@+id/phoneNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:padding="8dp"
                            android:background="@drawable/background_edittext"
                            android:fontFamily="@font/poppins"
                            android:hint="@string/hint_phone"
                            android:inputType="phone"
                            android:drawableStart="@drawable/ikon_phone_custom"
                            android:textColorHint="@color/editTextColor" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_address"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/editTextTopColor"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_star"
                        android:layout_toEndOf="@id/addressTextView"
                        android:fontFamily="@font/gilroy_semibold"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/editTextStarColor"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:id="@+id/addressEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_below="@id/addressTextView"
                        android:background="@drawable/background_edittext"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="@string/hint_address"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColorHint="@color/editTextColor" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>