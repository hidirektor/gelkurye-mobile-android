<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLicenseFrontLabel"
                android:text="@string/license_front"
                android:fontFamily="@font/poppins"
                android:textColor="@color/editTextTopColor"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLicenseFrontStarLabel"
                android:text="@string/hint_star"
                android:layout_toEndOf="@id/textViewLicenseFrontLabel"
                android:fontFamily="@font/gilroy_semibold"
                android:layout_marginStart="2dp"
                android:textColor="@color/editTextStarColor"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/editTextLicenseFront"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_below="@id/textViewLicenseFrontLabel"
                android:background="@drawable/edittextbackground"
                android:drawableStart="@drawable/license_ikon"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/image_upload_ikon"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="@string/license_front"
                android:inputType="none"
                android:padding="8dp"
                android:textColorHint="@color/editTextColor" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLicenseBackLabel"
                android:text="@string/license_back"
                android:fontFamily="@font/poppins"
                android:textColor="@color/editTextTopColor"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLicenseBackStarLabel"
                android:text="@string/hint_star"
                android:layout_toEndOf="@id/textViewLicenseBackLabel"
                android:fontFamily="@font/gilroy_semibold"
                android:layout_marginStart="2dp"
                android:textColor="@color/editTextStarColor"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/editTextLicenseBack"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_below="@id/textViewLicenseBackLabel"
                android:background="@drawable/edittextbackground"
                android:drawableStart="@drawable/license_ikon"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/image_upload_ikon"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="@string/license_back"
                android:inputType="none"
                android:padding="8dp"
                android:textColorHint="@color/editTextColor" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>