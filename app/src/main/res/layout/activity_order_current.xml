<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.Order.CurrentOrder"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_currentorder_dialog"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/orderStateBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spb_currentStateNumber="one"
            app:spb_maxStateNumber="three"
            app:spb_stateSize="48dp"
            app:spb_stateBackgroundColor="#BDBDBD"
            app:spb_stateForegroundColor="@color/navbarButtonColor"
            app:spb_stateNumberBackgroundColor="@android:color/transparent"
            app:spb_stateNumberForegroundColor="@android:color/transparent"
            app:spb_currentStateDescriptionColor="@color/navbarButtonColor"
            app:spb_stateDescriptionColor="@color/specTextColor"
            android:textAlignment="center"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/orderETATextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teslime Kalan Süre: \n4 dk"
            android:textColor="@color/specTextColor"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sipariş ID"
                android:textColor="@color/specTextColor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/orderIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#23124123123"
                android:textAlignment="viewEnd"
                android:textColor="@color/specTextColor"
                android:textSize="22sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ödeme Türü"
                android:textColor="@color/specTextColor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/orderDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#23124123123"
                android:textAlignment="viewEnd"
                android:textColor="@color/specTextColor"
                android:textSize="22sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sipariş Tutarı"
                android:textColor="@color/specTextColor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/orderTotalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123.45 ₺"
                android:textAlignment="viewEnd"
                android:textColor="@color/specTextColor"
                android:textSize="22sp" />

        </LinearLayout>

        <Button
            android:id="@+id/deliverOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siparişi Teslim Et"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:fontFamily="@font/gilroy_medium"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:textAlignment="textStart"
            android:background="@drawable/button_date_picker"
            android:drawableEnd="@drawable/button_deliver" />

    </LinearLayout>

</RelativeLayout>