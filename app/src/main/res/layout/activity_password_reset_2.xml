<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Screens.MainActivity"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/selection_ikon"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/password_reset_3_ikon"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintVertical_bias=".2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="@string/enter_otp"
                android:fontFamily="@font/outfit_extrabold"
                android:textColor="@color/headerTextColor"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_ikon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_otp_spec"
                android:textAlignment="center"
                android:fontFamily="@font/outfit"
                android:textColor="@color/editTextTopColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_otp_second"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/editTextTopColor"/>

            <com.chaos.view.PinView
                android:id="@+id/enteredOTP"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:cursorVisible="false"
                android:inputType="number"
                android:itemBackground="@color/otpBoxColor"
                app:cursorColor="@color/black"
                app:hideLineWhenFilled="true"
                app:itemCount="6"
                app:itemHeight="50dp"
                app:itemRadius="10dp"
                app:itemWidth="50dp"
                app:lineColor="@color/otpBoxColor"
                app:lineWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ikon_order_list_clock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining_time"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/editTextTopColor"/>

                <com.chaos.view.PinView
                    android:id="@+id/remainingTimeMinuteFirst"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:layout_marginEnd="2dp"
                    android:itemBackground="@color/checkBoxColor"
                    app:cursorColor="@color/black"
                    android:textColor="@color/editTextTopColor"
                    android:fontFamily="@font/poppins"
                    app:hideLineWhenFilled="true"
                    app:itemCount="1"
                    app:itemHeight="40dp"
                    app:itemRadius="10dp"
                    app:itemWidth="35dp"
                    app:lineColor="@color/checkBoxColor"
                    app:lineWidth="1dp" />
                <com.chaos.view.PinView
                    android:id="@+id/remainingTimeMinuteSecond"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:itemBackground="@color/checkBoxColor"
                    app:cursorColor="@color/black"
                    android:textColor="@color/editTextTopColor"
                    android:fontFamily="@font/poppins"
                    app:hideLineWhenFilled="true"
                    app:itemCount="1"
                    app:itemHeight="40dp"
                    app:itemRadius="10dp"
                    app:itemWidth="35dp"
                    app:lineColor="@color/checkBoxColor"
                    app:lineWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seperator"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/editTextTopColor"/>

                <com.chaos.view.PinView
                    android:id="@+id/remainingSecondFirst"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:layout_marginEnd="2dp"
                    android:itemBackground="@color/checkBoxColor"
                    app:cursorColor="@color/black"
                    android:textColor="@color/editTextTopColor"
                    android:fontFamily="@font/poppins"
                    app:hideLineWhenFilled="true"
                    app:itemCount="1"
                    app:itemHeight="40dp"
                    app:itemRadius="10dp"
                    app:itemWidth="35dp"
                    app:lineColor="@color/checkBoxColor"
                    app:lineWidth="1dp" />
                <com.chaos.view.PinView
                    android:id="@+id/remainingSecondSecond"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:itemBackground="@color/checkBoxColor"
                    app:cursorColor="@color/black"
                    android:textColor="@color/editTextTopColor"
                    android:fontFamily="@font/poppins"
                    app:hideLineWhenFilled="true"
                    app:itemCount="1"
                    app:itemHeight="40dp"
                    app:itemRadius="10dp"
                    app:itemWidth="35dp"
                    app:lineColor="@color/checkBoxColor"
                    app:lineWidth="1dp" />
            </LinearLayout>

            <Button
                android:id="@+id/sendAgainButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_acceptorder"
                android:padding="12dp"
                android:visibility="invisible"
                android:fontFamily="@font/outfit_bold"
                android:text="@string/send_again"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/otpVerifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_btn_login"
        android:fontFamily="@font/outfit_bold"
        android:padding="16dp"
        android:text="@string/button_confirm"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textAllCaps="false"
        android:shadowColor="#FF5722"
        android:shadowDx="8"
        android:shadowDy="10"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
