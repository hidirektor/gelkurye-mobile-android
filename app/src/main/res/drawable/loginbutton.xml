<!-- oval_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item android:top="50dp" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FF8B00"/> <!-- Gölge rengi: Siyah ve %20 şeffaflık -->
            <corners android:radius="300dp"/>
        </shape>
    </item>

    <!-- Oval background -->
    <item android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FF8B00"
                android:startColor="#FF6D00"
            />
            <corners android:radius="200dp"/>
        </shape>
    </item>
</layer-list>
