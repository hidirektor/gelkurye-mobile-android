<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseSwitcher">
        <item name="switcher_width">@dimen/switcher_width</item>
        <item name="switcher_height">@dimen/switcher_height</item>
        <item name="switcher_on_color">@color/switcher_on_color</item>
        <item name="switcher_off_color">@color/switcher_off_color</item>
        <item name="switcher_icon_color">@color/switcher_icon_color</item>
    </style>

    <style name="Switcher" parent="BaseSwitcher" />
</resources>